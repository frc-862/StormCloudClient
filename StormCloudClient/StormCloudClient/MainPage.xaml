    <ContentPage.Content>
        <AbsoluteLayout>

            <Grid AbsoluteLayout.LayoutBounds="0, 20, 1, 1" AbsoluteLayout.LayoutFlags="SizeProportional">
                <StackLayout x:Name="View_Scout" ClassId="Scout">
                    <Label Margin="10, 10" Text="Next Up..." HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="32" FontAttributes="Bold" />
                    <Grid Margin="20, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                    </Grid>
                    <Button Clicked="GoToMatch" FontSize="16" Text="Go To Scoring" BackgroundColor="#280338" Padding="20,10" CornerRadius="8" TextColor="White" Margin="20,0"/>
                </StackLayout>
                <StackLayout x:Name="View_Data" ClassId="Scan" IsVisible="False">
                    <Label Text="Scan"
                HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="20" />
                </StackLayout>
                <StackLayout x:Name="View_Settings" ClassId="Settings" IsVisible="False">
                    <Label Margin="10, 10" Text="Server Settings" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="32" FontAttributes="Bold" />
                    <Grid Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Label VerticalOptions="Center" Text="Environment Code" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="16" />
                        <Frame BorderColor="Transparent" Padding="5,0" Grid.Column="1" BackgroundColor="#280338" CornerRadius="8">
                            <Entry ClassId="environment_code" Unfocused="Setting_Unfocused" x:Name="Settings_EnvironmentCode" TextColor="White" BackgroundColor="#280338"/>
                        </Frame>
                    </Grid>
                    <Grid Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label VerticalOptions="Center" Text="Upload Mode" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="16" />
                        <Frame BorderColor="Transparent" Padding="5,0" Grid.Column="1" BackgroundColor="#280338" CornerRadius="8">
                            <Picker ClassId="upload_mode" Unfocused="Setting_Unfocused" x:Name="Settings_UploadMode" TextColor="White" Grid.Column="1" BackgroundColor="#280338">
                                <Picker.Items>
                                    <x:String>Using Wireless</x:String>
                                    <x:String>Using USB</x:String>
                                    <x:String>No Upload</x:String>
                                </Picker.Items>
                            </Picker>
                        </Frame>

                    </Grid>
                    <Grid Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Label VerticalOptions="Center" Text="Authentication Key" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="16" />
                        <Frame BorderColor="Transparent" Padding="5,0" Grid.Column="1" BackgroundColor="#280338" CornerRadius="8">
                            <Entry ClassId="authentication_key" Unfocused="Setting_Unfocused" x:Name="Settings_AuthenticationKey" TextColor="White" IsPassword="True" BackgroundColor="#280338"/>
                        </Frame>
                    </Grid>
                    <Label Margin="10, 10" Text="Scouting Settings" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="32" FontAttributes="Bold" />
                    <Grid Margin="10,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label VerticalOptions="Center" Text="Upload Mode" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="16" />
                        <Frame BorderColor="Transparent" Padding="5,0" Grid.Column="1" BackgroundColor="#280338" CornerRadius="8">
                            <Picker ClassId="selected_schema" Unfocused="Setting_Unfocused" x:Name="Settings_SelectedSchema" TextColor="White" Grid.Column="1" BackgroundColor="#280338">
                            </Picker>
                        </Frame>

                    </Grid>
                </StackLayout>

            </Grid>

            <StackLayout AbsoluteLayout.LayoutBounds="0, 1, 1, 350" TranslationY="250" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" x:Name="Nav_BottomBar">
                <Frame BorderColor="Transparent" BackgroundColor="#280338" HeightRequest="400" CornerRadius="16" HasShadow="True">
                    <Frame.GestureRecognizers>
                        <SwipeGestureRecognizer Swiped="Nav_SwipeBottomBar"/>
                    </Frame.GestureRecognizers>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" HeightRequest="60" VerticalOptions="Start" HorizontalOptions="Center" x:Name="Nav_DescriptorPanel">
                            <Label Text="Scouting"
                HorizontalOptions="Center" TextColor="White" VerticalOptions="Center" FontAttributes="Bold" FontSize="40" x:Name="Nav_Descriptor" />

                            <Button Clicked="Nav_ToggleBottomBar_Clicked" x:Name="Nav_ToggleBottomBar" Margin="10,0,0,0" BackgroundColor="#3a0e4d" WidthRequest="30" HeightRequest="30" CornerRadius="30" VerticalOptions="Center" Padding="5" Text="v" TextColor="White" FontAttributes="Bold" />
                        </StackLayout>
                        <StackLayout Opacity="0" Orientation="Horizontal" VerticalOptions="StartAndExpand" HorizontalOptions="Center" x:Name="Nav_Content" Margin="0,10,0,0">
                            <Button ImageSource="football.png" ClassId="Scout" Clicked="Nav_GoTo" Text="Scout" TextColor="White" BackgroundColor="#3a0e4d" WidthRequest="100" HeightRequest="100" VerticalOptions="Center" Margin="5" CornerRadius="8"/>
                            <Button ImageSource="statsreport.png" ClassId="Data" Clicked="Nav_GoTo" Text="Scan" TextColor="White" BackgroundColor="#3a0e4d" WidthRequest="100" HeightRequest="100" VerticalOptions="Center" Margin="5" CornerRadius="8"/>
                            <Button ImageSource="settings.png" ClassId="Settings" Clicked="Nav_GoTo" Text="Settings" TextColor="White" BackgroundColor="#3a0e4d" WidthRequest="100" HeightRequest="100" VerticalOptions="Center" Margin="5" CornerRadius="8"/>
                        </StackLayout>
                    </StackLayout>

                </Frame>



            </StackLayout>




